<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wilddog.quickstart.ConversationActivity">

    <RelativeLayout
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="320dp">

        <com.wilddog.video.base.WilddogVideoViewLayout
            android:id="@+id/remote_video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wilddog.video.base.WilddogVideoView
                android:id="@+id/remote_video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.wilddog.video.base.WilddogVideoViewLayout>

        <com.wilddog.video.base.WilddogVideoViewLayout
            android:id="@+id/local_video_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wilddog.video.base.WilddogVideoView
                android:id="@+id/local_video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.wilddog.video.base.WilddogVideoViewLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTextGray"
        android:orientation="vertical"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="你的Wilddog ID:"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/tv_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center|bottom"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            >

            <Button
                android:id="@+id/btn_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户列表"
                />

            <Button
                android:id="@+id/btn_invite_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="挂断"
                android:visibility="visible"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_mic"
                android:layout_marginLeft="20dp"
                android:text="mic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_local_dimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="dimension"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_local_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="fps"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_local_sentbytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="sent"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_local_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="rate"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_remote_dimensions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="dimension"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_remote_fps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="fps"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_remote_recbytes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="received"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/tv_remote_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="rate"
                    android:textColor="@color/colorTextRed"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:id="@+id/tv_data"
        />

    </LinearLayout>


</LinearLayout>
